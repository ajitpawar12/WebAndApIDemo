@model IEnumerable<Domain.Models.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@*<p>
    <button id="Createdata" class="btn btn-primary">Create Button</button>
</p>*@

<div class="form-horizontal">
    <h4>User</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("FirstName", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" id="firstname" class="form-control" />            
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Last Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" id="lastname" class="form-control" /> 
            
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" id="email" class="form-control" /> 
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" id="submitdata" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <button id="Editdata" class="btn btn-primary" data-userId="@item.UserId">Edit</button> |
                <button id="Detailsdata" class="btn btn-primary" data-userId="@item.UserId">Details</button> |
                <button id="Deletedata" class="btn btn-primary" data-userId="@item.UserId">Delete</button>
            </td>
        </tr>
    }

</table>
@section scripts{

    <script>

        $(document).ready(function ()
        {
            //create data
            $("#submitdata").click(function ()
            {
                var firstname = $("#firstname").val();
                var lastname = $("#lastname").val();
                var email = $("#email").val();
                alert(firstname + lastname + email);

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Create","UserAjaxDemo")',
                    data: {
                        FirstName: firstname,
                        LastName: lastname,
                        Email:email
                    },
                    datatype: 'json',
                    success: function (data) {
                        if (data.status === "Success") {
                            var url = '@Url.Action("Index","UserAjaxDemo")';
                            window.location = encodeURIComponent(url);
                        }
                    },
                    beforeSend: function () {
                        
                    },
                    complete: function () {
                        
                    },
                    error: function () {
                        alert("Error while retriving data !");
                    }
                });
            });

            //Edit data
            $("#Editdata").click(function () {
                alert("edit");

            });
            //Delete data
            $("#Deletedata").click(function () {
                alert("delete");

            });
            //Details data
            $("#Detailsdata").click(function () {
                alert("details");

            });
        });
    </script>
    } 